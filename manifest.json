{
  "manifest_version": 2,
  "name": "Crystal Screenshot",
  "version": "1.0",
  "description": "Take screenshot of your current tab",
  "permissions": ["activeTab", "https://*/*"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Take Screenshot"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
